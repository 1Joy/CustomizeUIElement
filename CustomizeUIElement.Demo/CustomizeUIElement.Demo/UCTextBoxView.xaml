<UserControl x:Class="CustomizeUIElement.Demo.UCTextBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomizeUIElement.Demo"
             xmlns:attachProp="clr-namespace:CustomizeUIElement.WpfControlLibrary.AttachPropertys;assembly=CustomizeUIElement.WpfControlLibrary"
             mc:Ignorable="d" >
    <Grid>
        <StackPanel>
            <TextBlock Text="TextBox:" Margin="10"/>
            <UniformGrid Columns="5" Margin="10">
                <TextBox Style="{DynamicResource DefaultTextBoxStyle}" Width="150" Height="30" Text="DefaultTextBoxStyle"/>
            </UniformGrid>

            <TextBlock Text="icon TextBox:" Margin="10"/>
            <UniformGrid Columns="5" Margin="10">
                <TextBox attachProp:TextBoxAttachPropertyManager.TextBoxIcon="&#xe717;" Style="{DynamicResource IconTextBoxStyle}" 
                         Width="150" Height="30" Text="DefaultTextBoxStyle"/>
            </UniformGrid>
        </StackPanel>   
    </Grid>
</UserControl>
