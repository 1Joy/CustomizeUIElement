<Window x:Class="CustomizeUIElement.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomizeUIElement.Demo"
        mc:Ignorable="d"
        Title="MainWindow" Width="800" Height="700">
    <Grid>
        <TabControl>
            <TabItem Header="button">
                <StackPanel>
                    <UniformGrid Columns="8" Margin="10">
                        <Button Style="{DynamicResource PrimaryMiniCircleButtonStyle}" Content="&#xe717;" ToolTip="PrimaryMiniButton"/>
                        <Button Style="{DynamicResource PrimaryMiniCircleButtonStyle}" Content="&#xe717;" ToolTip="PrimaryMiniButton" IsEnabled="False"/>

                        <Button Style="{DynamicResource DefaultMiniCircleButtonStyle}" Content="&#xe717;"/>
                    </UniformGrid>

                    <UniformGrid Columns="8" Margin="10">
                        <Button Style="{DynamicResource PrimaryCornerButtonStyle}" Content="Primary"/>
                        <Button Style="{DynamicResource DefaultCornerButtonStyle}" Content="Default"/>
                        <Button Style="{DynamicResource DefaultBorderCornerButtonStyle}" Content="Default1"/>
                        <Button Style="{DynamicResource PrimaryCornerButtonStyle}" Content="IsEnable" IsEnabled="False"/>

                        <Button Style="{DynamicResource PrimaryTextButtonStyle}" Content="Text"/>
                        <Button Style="{DynamicResource DefaultTextButtonStyle}" Content="&#xe717;"/>
                    </UniformGrid>
                </StackPanel>
                
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
